for i in range(0,len(l)):
    print(l[i])
    #l[0]=l.pop(i)
print(l)


def monotonic(l):
    if l == sorted(l) or l == sorted(l,reverse=True):
        return True
    else:
        return False
   
def mx(l):
    m=0
    for i in l:
        if m <= i:
            m=i
    return m        
   
def mindiff(l):
   
    a=[abs(x-y) for x in l for y in l  if x-y !=0]
    return min(a)

def factorial(m,n):
    if n == 1:
        return m
    else:
        return factorial( m*n, n-1)
       
def calcback(num):
    if num <=0:
        print ('*')
    else:
        print ('*'*num)
        calcback(num-2)

def power(p,num):
    if num == 1:
        return p
    else:
       
        return(p*power(p,num-1))    
   
if __name__ =='__main__':
    l = [10, 2, 5, 15]
    #print(monotonic(l))
    #print(mx(l))
    #print(mindiff(l))
    print(factorial(1,5))
    print(calcback(15))
    print(power(2,3))
