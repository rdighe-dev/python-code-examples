def sort_elem(n):
    return n[m]
   
def sort(a,m):
    print(sorted(a,key = sort_elem ))
    print(a)

if __name__ == "__main__":
    a = [(23, 45, 20), (25, 44, 39), (89, 40, 23)]
    m = 2
    print("Sorted:"),
    sort(a,m)


def foo():
    x = 20

    def bar():
        global x
        x = 25
   
    print("Before calling bar: ", x)
    print("Calling bar now")
    bar()
    print("After calling bar: ", x)

foo()
print("x in main: ", x)


